  ? `${title} | ${SITE.title}`
  : `${SITE.title} | Email, meet privacy.`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const canonicalImageSrc = new URL(OPEN_GRAPH.image.src, Astro.site).toString();
const imageAlt = OPEN_GRAPH.image.alt;
