---
import BaseLayout from "./BaseLayout.astro"
import DocsNavigation from "~/components/organisms/DocsNavigation.astro"
import Prose from "~/components/atoms/Prose.astro"
import Footer from "~/components/organisms/Footer.astro"
import Navbar from "../components/organisms/navbar.vue"
import TableOfContents from "~/components/organisms/TableOfContents.vue"

import navigation from "~/navigation"

const { content: { title, description, astro: { headers } }} = Astro.props
const tableOfContents = headers.filter(({ depth }) => depth === 2)
const url = new URL(Astro.request.url)
const currentPage = url.pathname

let allLinks = navigation.flatMap((section) => section.links)
let linkIndex = allLinks.findIndex((link) => link.href === currentPage) 
let previousPage = allLinks[linkIndex - 1]
let nextPage = allLinks[linkIndex + 1]
let currentSection = navigation.find((section) =>
  section.links.find((link) => link.href === currentPage)
)
---

<BaseLayout title={title} description={description}>
  <Navbar client:only="vue" transparentAtTop={true} />

  <div class="flex flex-col">
    <div class="relative mx-auto flex max-w-8xl justify-center sm:px-2 lg:px-8 xl:px-12 mt-12">
      <div class="hidden lg:relative lg:block lg:flex-none">
        <div class="sticky top-[4.5rem] h-[calc(100vh-4.5rem-8rem)] overflow-y-auto py-16 pl-0.5">
          <DocsNavigation
            currentPage={currentPage}
            class="w-64 pr-8 xl:w-72 xl:pr-16"
          />
        </div>
      </div>
      <div class="min-w-0 max-w-2xl flex-auto px-4 py-16 lg:max-w-none lg:pr-0 lg:pl-8 xl:px-16">
        <article>
          {(title || currentSection) && (
            <header class="mb-9 space-y-1">
              {currentSection && (
                <p class="font-display text-sm font-medium text-sky-500">
                  {currentSection.title}
                </p>
              )}
              {title && (
                <h1 class="font-display text-3xl tracking-tight text-slate-900 dark:text-white">
                  {title}
                </h1>
              )}
            </header>
          )}
          <Prose><slot /></Prose>
        </article>
        <dl class="mt-12 flex border-t border-slate-200 pt-6 dark:border-slate-800">
          {previousPage && (
            <div>
              <dt class="font-display text-sm font-medium text-slate-900 dark:text-white">
                Previous
              </dt>
              <dd class="mt-1">
                <a href={previousPage.href} class="text-base font-semibold text-slate-500 hover:text-slate-600 dark:text-slate-400 dark:hover:text-slate-300">
                  &larr; {previousPage.title}
                </a>
              </dd>
            </div>
          )}
          {nextPage && (
            <div class="ml-auto text-right">
              <dt class="font-display text-sm font-medium text-slate-900 dark:text-white">
                Next
              </dt>
              <dd class="mt-1">
                <a href={nextPage.href} class="text-base font-semibold text-slate-500 hover:text-slate-600 dark:text-slate-400 dark:hover:text-slate-300">
                  {nextPage.title} &rarr;
                </a>
              </dd>
            </div>
          )}
        </dl>
      </div>
      <TableOfContents client:load tableOfContents={tableOfContents} />
    </div>
    <Footer />
  </div>
</BaseLayout>
