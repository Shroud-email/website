---
import { isBefore } from "date-fns";
import { getCollection } from "astro:content";

import LandingLayout from "../../layouts/LandingLayout.astro";
import PostPreview from "../../components/molecules/PostPreview.astro";
import NewsletterForm from "~/components/molecules/NewsletterForm.vue";

const posts = (await getCollection("blog")).sort((a, b) => {
  if (isBefore(a.data.date, b.data.date)) return 1;
  if (isBefore(b.data.date, a.data.date)) return -1;
  return 0;
});
---

<LandingLayout
  title="Blog"
  description="Stay up to date with Shroud.email. Privacy news and product updates."
>
  <div
    class="bg-gray-50 pt-16 mt-12 pb-20 px-4 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8"
  >
    <div
      class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl"
    >
      <div>
        <h1
          class="text-3xl tracking-tight font-bold text-gray-900 sm:text-4xl font-display flex align-middle"
        >
          Blog
          <a
            href="/blog/rss.xml"
            class="ml-2 text-gray-600 hover:text-gray-900 place-content-center pt-1"
          >
            <span class="sr-only">RSS</span>
            <!-- heroicons/outline rss -->
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M12.75 19.5V18.75C12.75 14.6079 9.39214 11.25 5.25 11.25H4.5M4.5 4.5H5.25C13.1201 4.5 19.5 10.8799 19.5 18.75V19.5M6 18.75C6 19.1642 5.66421 19.5 5.25 19.5C4.83579 19.5 4.5 19.1642 4.5 18.75C4.5 18.3358 4.83579 18 5.25 18C5.66421 18 6 18.3358 6 18.75Z"
                stroke="#0F172A"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </h1>
        <div
          class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:gap-5 lg:items-center"
        >
          <p class="text-xl text-gray-500">
            Sign up for our newsletter to stay in the loop.
          </p>
          <NewsletterForm
            client:idle
            className="mt-6 mb-3 flex flex-col sm:flex-row lg:mt-0 lg:justify-end"
          />
        </div>
      </div>
      <div class="mt-6 pt-10 grid gap-16 lg:grid-cols-3 lg:gap-x-5 lg:gap-y-12">
        {posts.map((post) => <PostPreview post={post} />)}
      </div>
    </div>
  </div>
</LandingLayout>
