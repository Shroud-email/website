---
import { Icon } from "astro-icon"

import BaseLayout from "../layouts/BaseLayout.astro"
import PageHeader from "../components/molecules/PageHeader.astro"
import PageBlock from "../components/molecules/PageBlock.astro"

const title = "Product roadmap"
const description = "We're always making improvements to Shroud.email. Here's what you can expect next."

const roadmapItems = [
  { name: "Tracker blocking", completed: "November 2021" },
  { name: "Block individual senders", completed: "January 2022" },
  { name: "Image proxying", completed: "February 2022" },
  { name: "Privacy-friendly logging", href: "/blog/privacy-and-logging", completed: "May 2022" },
  { name: "Reply to emails", href: "/blog/alias-replies", completed: "June 2022" },
  { name: "Simplified self-hosting", completed: null },
  { name: "Browser extension", completed: null},
  { name: "Mobile app", completed: null },
]
---

<BaseLayout title={title}>
  <PageHeader title={title} description={description}>
    <span class="block mt-3">
      Want to request a feature? <a href="mailto:hello@shroud.email" class="underline hover:text-gray-900">Contact us!</a>
    </span>
  </PageHeader>
  <PageBlock heading="What's next">
    <ul role="list" class="-mb-8">
      {roadmapItems.map(({ name, href, completed }) => (
        <div class="relative pb-8">
          <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
          <div class="relative flex space-x-3">
            <div>
              <span class={`${completed ? 'bg-green-500' : 'bg-gray-400'} h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white`}>
                <Icon pack="heroicons-solid" name={completed ? 'check' : 'cog'} class="h-5 w-5 text-white" />
              </span>
            </div>
            <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
              <div>
                <p class="text-sm text-gray-900">
                  {href ? (<a href={href} class="hover:underline font-medium text-blue-700" target="_blank">{name}</a>) : name}
                </p>
              </div>
              <div class="text-right text-sm whitespace-nowrap text-gray-500">
                { completed || "Planned" }
              </div>
            </div>
          </div>
        </div>
      ))}
    </ul>
  </PageBlock>
</BaseLayout>
