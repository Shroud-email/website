---
import { format } from "date-fns";
import type { CollectionEntry } from "astro:content";

export interface Props {
  post: CollectionEntry<"blog">;
}
const { post } = Astro.props;

const displayDate = (post: CollectionEntry<"blog">) => {
  return format(post.data.date, "PP");
};
---

<a
  href={`/blog/${post.slug}/`}
  class="flex flex-col rounded-lg shadow-lg overflow-hidden focus:ring focus:ring-indigo-600"
>
  <div class="flex-shrink-0">
    <img
      src={post.data.image}
      alt={post.data.imageAlt}
      class="h-48 w-full object-cover"
    />
  </div>
  <div class="flex-1 bg-white p-6 flex flex-col justify-between">
    <div>
      <p class="text-sm text-gray-500">
        <time datetime="2020-03-16">{displayDate(post)}</time>
      </p>
      <p class="text-xl font-semibold text-gray-900 mt-2 font-display">
        {post.data.title}
      </p>
    </div>
    <p class="mt-3 text-base text-gray-500">{post.data.description}</p>
  </div>
</a>
